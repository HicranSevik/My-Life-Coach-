<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.sevik.hicran.deneme2.Fragment2"
android:orientation="vertical">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kalan Kalori:" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">


                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.06"
                    android:text="Alınan Kalori:" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.10"
                    android:text="Toplam Kalori:" />

            </LinearLayout>
        </LinearLayout>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="357dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kahvaltı:" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ara Öğün-Sabah:" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="56dp" />
                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Öğle Yemeği" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="56dp" />
                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ara Öğün-ÖğledenSonra:" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="56dp" />
                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Akşam Yemeği:" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="56dp" />
                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ara Öğün-Gece:" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="56dp" />

            </LinearLayout>



        </ScrollView>


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="126dp"
        android:layout_height="match_parent"
        android:layout_gravity="end">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="62dp"
            android:layout_height="88dp"
            android:layout_gravity="end"
            android:layout_marginRight="25dp"
            android:layout_marginTop="410dp"
            android:src="@drawable/search"
            app:backgroundTint="@null"
            app:fabSize="auto"


            />


    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>